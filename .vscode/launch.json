    "version": "0.2.0",
    "configurations": [
        {
            "name": "normal Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
        },
        {
            "name": "server Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "args": ["--SERVER", "${input:server}"]
        }
    ],
    "inputs": [
        {
            "id": "server",
            "type": "promptString",
            "description": "Current Server?",
            "default": "monolith.api-server"
        }
    ]
}