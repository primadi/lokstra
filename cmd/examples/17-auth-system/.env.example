# Lokstra Auth System - Environment Variables
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lokstra_auth_demo
DB_SSLMODE=disable

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
JWT_ISSUER=lokstra-auth-system
JWT_ACCESS_TOKEN_TTL=900      # 15 minutes in seconds
JWT_REFRESH_TOKEN_TTL=604800  # 7 days in seconds

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Application Configuration
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_LOG_LEVEL=info   # debug, info, warn, error

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Session Configuration
SESSION_ENABLED=true
SESSION_STORE=redis
SESSION_TTL=86400  # 24 hours in seconds

# Security
BCRYPT_COST=10  # Higher = more secure but slower

# Rate Limiting (if implemented)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Email Configuration (for OTP, password reset, etc.)
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# OTP Configuration
OTP_LENGTH=6
OTP_TTL=300  # 5 minutes in seconds

# Multi-tenancy
DEFAULT_TENANT_ID=tenant1

# Feature Flags
FEATURE_OTP_LOGIN=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_2FA=false

# Monitoring (if implemented)
METRICS_ENABLED=false
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=http://localhost:14268/api/traces

# Notes:
# - Never commit the actual .env file with real secrets
# - Use strong, random values for JWT_SECRET_KEY in production
# - Change default passwords for PostgreSQL and Redis in production
# - Enable HTTPS in production and update CORS origins accordingly
# - Consider using a secrets management service (AWS Secrets Manager, Vault, etc.)
