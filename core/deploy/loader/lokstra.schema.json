{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lokstra.dev/schemas/deploy.json",
  "title": "Lokstra Deployment Configuration",
  "description": "Schema for Lokstra deployment configuration files",
  "type": "object",
  "properties": {
    "configs": {
      "type": "object",
      "description": "Global configuration definitions",
      "patternProperties": {
        "^[A-Z][A-Z0-9_]*$": {
          "description": "Configuration value (string, number, boolean, or object)",
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" },
            { "type": "object" },
            { "type": "array" }
          ]
        }
      }
    },
    "service-definitions": {
      "type": "object",
      "description": "Service definitions",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "description": "Service factory type identifier",
              "pattern": "^[a-z][a-z0-9-]*$"
            },
            "depends-on": {
              "type": "array",
              "description": "List of service dependencies",
              "items": {
                "type": "string",
                "description": "Dependency in format 'paramName:serviceName' or just 'serviceName'",
                "pattern": "^([a-zA-Z][a-zA-Z0-9]*:)?[a-z][a-z0-9-]*$"
              }
            },
            "config": {
              "type": "object",
              "description": "Service-specific configuration",
              "additionalProperties": true
            },
            "auto-router": {
              "type": "object",
              "description": "Auto-router configuration for this service",
              "properties": {
                "convention": {
                  "type": "string",
                  "description": "Routing convention to use",
                  "enum": ["rest", "rpc", "graphql"]
                },
                "resource": {
                  "type": "string",
                  "description": "Resource name (singular)",
                  "pattern": "^[a-z][a-z0-9-]*$"
                },
                "resource-plural": {
                  "type": "string",
                  "description": "Resource name (plural)",
                  "pattern": "^[a-z][a-z0-9-]*$"
                },
                "path-prefix": {
                  "type": "string",
                  "description": "Path prefix for all routes",
                  "pattern": "^/.*"
                },
                "middlewares": {
                  "type": "array",
                  "description": "Router-level middlewares",
                  "items": {
                    "type": "string"
                  }
                },
                "hidden": {
                  "type": "array",
                  "description": "Methods to hide from auto-generated routes",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "routers": {
      "type": "object",
      "description": "Router definitions",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "required": ["service"],
          "properties": {
            "service": {
              "type": "string",
              "description": "Service name to create router from",
              "pattern": "^[a-z][a-z0-9-]*$"
            },
            "overrides": {
              "type": "object",
              "description": "Route overrides",
              "patternProperties": {
                "^[A-Z][a-zA-Z0-9]*$": {
                  "type": "object",
                  "properties": {
                    "hide": {
                      "type": "boolean",
                      "description": "Hide this route from router"
                    },
                    "middleware": {
                      "type": "array",
                      "description": "Additional middleware for this route",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "remote-service-definitions": {
      "type": "object",
      "description": "Remote service definitions",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "properties": {
            "proxy-service": {
              "type": "string",
              "description": "Reference to service definition for proxying"
            },
            "url": {
              "type": "string",
              "description": "Base URL of remote service (not needed if using proxy-service)"
            },
            "resource": {
              "type": "string",
              "description": "Resource name (singular, not needed if using proxy-service)"
            },
            "resource-plural": {
              "type": "string",
              "description": "Plural form of resource name"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "deployments": {
      "type": "object",
      "description": "Deployment configurations",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "properties": {
            "config-overrides": {
              "type": "object",
              "description": "Configuration overrides for this deployment",
              "additionalProperties": true
            },
            "servers": {
              "type": "object",
              "description": "Server definitions",
              "patternProperties": {
                "^[a-z][a-z0-9-]*$": {
                  "type": "object",
                  "required": ["base-url", "apps"],
                  "properties": {
                    "base-url": {
                      "type": "string",
                      "description": "Server base URL",
                      "pattern": "^https?://"
                    },
                    "apps": {
                      "type": "array",
                      "description": "Applications on this server",
                      "items": {
                        "type": "object",
                        "required": ["addr"],
                        "properties": {
                          "addr": {
                            "type": "string",
                            "description": "Application address (e.g., ':8080', '127.0.0.1:8080', 'unix:/tmp/app.sock')",
                            "pattern": "^(:[0-9]+|[0-9.]+:[0-9]+|unix:.+)$"
                          },
                          "required-services": {
                            "type": "array",
                            "description": "Services to include in this app",
                            "items": {
                              "type": "string",
                              "pattern": "^[a-z][a-z0-9-]*$"
                            }
                          },
                          "routers": {
                            "type": "array",
                            "description": "Routers to include in this app",
                            "items": {
                              "type": "string",
                              "pattern": "^[a-z][a-z0-9-]*$"
                            }
                          },
                          "required-remote-services": {
                            "type": "array",
                            "description": "Remote services to include in this app",
                            "items": {
                              "type": "string",
                              "pattern": "^[a-z][a-z0-9-]*$"
                            }
                          },
                          "published-router-services": {
                            "type": "array",
                            "description": "Services published by this app for service discovery",
                            "items": {
                              "type": "string",
                              "pattern": "^[a-z][a-z0-9-]*$"
                            }
                          }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}
