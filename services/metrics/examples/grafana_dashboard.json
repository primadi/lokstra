{
  "dashboard": {
    "id": null,
    "title": "Lokstra User API Metrics",
    "description": "Dashboard for monitoring Lokstra User API performance and health",
    "tags": ["lokstra", "user-api", "metrics"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(lokstra_userapi_http_requests_total[5m])",
            "legendFormat": "{{ method }} {{ endpoint }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time (95th percentile)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(lokstra_userapi_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 100
                },
                {
                  "color": "red",
                  "value": 500
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "HTTP Request Rate by Method",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lokstra_userapi_http_requests_total[5m])",
            "legendFormat": "{{ method }}"
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(lokstra_userapi_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{ le }}"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lokstra_userapi_http_errors_total[5m])",
            "legendFormat": "{{ error }}"
          },
          {
            "expr": "rate(lokstra_userapi_http_responses_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx responses"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 17
        }
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "lokstra_userapi_active_connections",
            "legendFormat": "{{ handler }}"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 17
        }
      },
      {
        "id": 7,
        "title": "Users Created",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(lokstra_userapi_users_created_total[1h])",
            "legendFormat": "{{ source }}"
          }
        ],
        "yAxes": [
          {
            "label": "Users",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 25
        }
      },
      {
        "id": 8,
        "title": "Total Users",
        "type": "stat",
        "targets": [
          {
            "expr": "lokstra_userapi_total_users",
            "legendFormat": "Total Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 25
        }
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "lokstra_userapi_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "{{ type }} (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 33
        }
      },
      {
        "id": 10,
        "title": "Goroutines",
        "type": "graph",
        "targets": [
          {
            "expr": "lokstra_userapi_goroutines_count",
            "legendFormat": "Active Goroutines"
          }
        ],
        "yAxes": [
          {
            "label": "Count",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 33
        }
      },
      {
        "id": 11,
        "title": "Health Check Status",
        "type": "stat",
        "targets": [
          {
            "expr": "lokstra_userapi_service_up",
            "legendFormat": "{{ service }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "Down",
                    "color": "red"
                  },
                  "1": {
                    "text": "Up",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 41
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(lokstra_userapi_http_requests_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "method",
          "type": "query", 
          "query": "label_values(lokstra_userapi_http_requests_total, method)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": []
    },
    "schemaVersion": 27,
    "version": 1
  }
}
